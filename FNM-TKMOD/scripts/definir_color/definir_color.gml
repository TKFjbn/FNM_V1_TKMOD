function definir_color(_numero){
	
	switch (_numero) {
		
		case 0:
			return (make_color_rgb(196,40,138)); //rosa
		break;
		case 1:
			return (make_color_rgb(3,229,254)); //azul
		break;
		case 2:
			return (make_color_rgb(0,213,2)); //verde
		break;
		case 3:
			return (make_color_rgb(239,29,29)); //rojo
		break;
		
	}
	
}